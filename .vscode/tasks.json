{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run Java",
      "type": "shell",
      "command": "javac ${file} && java ${fileBasenameNoExtension} < input.txt > output.txt",
      "options": {
        "shell": {
          "executable": "cmd.exe"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}




